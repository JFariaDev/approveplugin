{
    "name": "approveplugin/filament-approver",
    "description": "Manage approval processes in your filament application",
    "keywords": [
        "approveplugin",
        "laravel",
        "filament-approver"
    ],
    "version": "1.0.0",
    "homepage": "https://github.com/JFariaDev/approveplugin/filament-approver",
    "support": {
        "issues": "https://github.com/JFariaDev/approveplugin/filament-approver/issues",
        "source": "https://github.com/JFariaDev/approveplugin/filament-approver"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Jose Faria",
            "email": "josefaira.webdev@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "filament/filament": "^3.0",
        "illuminate/contracts": "^10.0|^11.0",
        "ringlesoft/laravel-process-approval": "^1.0",
        "spatie/laravel-package-tools": "^1.15.0",
        "spatie/laravel-permission": "^6.1"
    },
    "require-dev": {
        "nunomaduro/collision": "^7.9",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "ApprovePlugin\\FilamentApprover\\": "src/",
            "ApprovePlugin\\FilamentApprover\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ApprovePlugin\\FilamentApprover\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "ApprovePlugin\\FilamentApprover\\ApprovalServiceProvider"
            ],
            "aliases": {
                "Approval": "ApprovePlugin\\FilamentApprover\\Facades\\Approval"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
